<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/frame_bg"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_manager_device_item_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textSize="18dp"
        tools:text="设备" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <Button
            android:id="@+id/iv_select_device_show_real_time_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/whiteSmoke"
            android:layout_toStartOf="@id/iv_select_device_show_past_time_h_data"
            android:background="@drawable/list_item_bt_bg"
            android:minHeight="30dp"
            android:text="实时数据" />

        <Button
            android:id="@+id/iv_select_device_show_past_time_t_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/whiteSmoke"
            android:background="@drawable/list_item_bt_bg"
            android:minHeight="30dp"
            android:text="往期温度数据" />

        <Button
            android:id="@+id/iv_select_device_show_past_time_h_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_select_device_show_past_time_t_data"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:textColor="@color/whiteSmoke"
            android:background="@drawable/list_item_bt_bg"
            android:minHeight="30dp"
            android:text="往期湿度数据" />

        <Button
            android:id="@+id/iv_select_device_show_past_time_p_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_select_device_show_real_time_data"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:textColor="@color/whiteSmoke"
            android:layout_toStartOf="@id/iv_select_device_show_past_time_t_data"
            android:background="@drawable/list_item_bt_bg"
            android:minHeight="30dp"
            android:text="往期图像数据" />

    </RelativeLayout>

</RelativeLayout>