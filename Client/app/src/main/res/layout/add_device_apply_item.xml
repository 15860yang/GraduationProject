<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/frame_bg"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_add_device_item_name_devid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            tools:text="设备" />

        <TextView
            android:id="@+id/tv_add_device_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            tools:text="设备" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_device_item_no_agree_add_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/bt_device_item_agree_add_device"
        android:background="@drawable/list_item_bt_bg"
        android:minHeight="40dp"
        android:textColor="@color/whiteSmoke"
        android:padding="5dp"
        android:text="不同意" />

    <Button
        android:id="@+id/bt_device_item_agree_add_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/list_item_bt_bg"
        android:minHeight="40dp"
        android:textColor="@color/whiteSmoke"
        android:padding="5dp"
        android:text="同意" />

</RelativeLayout>